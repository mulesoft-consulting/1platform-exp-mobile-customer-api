		product: {
			name: orderItem.product.name,
			id: orderItem.product.id
		},
		quantity: orderItem.quantity.ordered default 0,
		product_id: orderItem.product.id default ""
	}
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
